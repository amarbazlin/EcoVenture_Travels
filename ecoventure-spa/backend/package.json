{
  "name": "ecoventure-api",
  "version": "1.0.0",
  "description": "REST API for EcoVenture Tour Management System with MySQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seed.js",
    "test": "jest",
    "lint": "eslint . --ext .js",
    "prestart": "node scripts/init-db.js",
    "validate:api": "node scripts/validate-api.js",
    "test:performance": "node scripts/performance-test.js"
  },
  "keywords": [
    "rest-api",
    "tours",
    "travel",
    "mysql",
    "express",
    "sequelize"
  ],
  "author": "EcoVenture Team",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/amarbazlin/EcoVenture_Travels"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server.js",
      "scripts/*.js",
      "!scripts/seed.js"
    ]
  }
}
